extends index_layout

block content
   .wrap
      .header
         .header-in
      .contents
         .content-signup
            .img-area
               img.index-logo(src='./images/bi.png')
            .form-area
               form.index-form(method='post', action='/signup')
                  input#sign_up_id.input-box(type='text', name='id', placeholder='ID', data-required='required')
                  input#sign_up_password.input-box(type='password', name='password', placeholder='비밀번호', data-required='required')
                  input#sign_up_password_confirm.input-box(type='password', name='password_confirm', placeholder='비밀번호 확인', data-required='required')
                  input#sign_up_name.input-box(type='text', name='name', placeholder='이름', data-required='required')
                  input#sign_up_birth.input-box(type='text', name='birth', placeholder='생일 ex)900430', data-required='required')
                  div
                     input#sex_male.blind(type='radio', name='sex_info', value='male', checked='checked')
                     input#sex_female.blind(type='radio', name='sex_info', value='female')
                  button#sign_up_male.input-button(type='button', name='male') 남자
                  button#sign_up_female.input-button(type='button', name='female') 여자
                  input#sign_up_period.input-box(type='text', name='period', placeholder='기수 ex)25-2', data-required='required')
                  input#sign_up_phone.input-box(type='tel', name='phone', placeholder='전화번호', data-required='required')
                  input#sign_up_mail.input-box(type='email', name='mail', placeholder='E-Mail', data-required='required')
                  .form-img-upload
                     input#sign_up_img.sign_up_imgfile(type='file', name='sign_up_img', accept='image/*')
                     label#sign_up_img_label(for='sign_up_img') 사진 선택
                  button#form-second-btn-signup.form-first-btn.signup(type='button') SIGN UP
   script(src='http://code.jquery.com/jquery.min.js')
   script(src='./javascripts/index.js')
